@model Notes
@{
    ViewData["Title"] = "Update";
}
<div class="d-flex justify-content-center">
    <div class="py-1">
        <img style="vertical-align:middle" src="~/post-it.png">
        <h1>Note-Tella</h1>
        <small class="form-text text-muted"> // A simple note-taking web app that allows for note creation, editing, and deletion.</small>
    </div>
</div>
<form method="post">
    @Html.AntiForgeryToken()

    <div class="row py-3">
        <div class="d-flex justify-content-center py-3">
            <div class="col-lg-6" style="width:35rem;">
                <div class="card border-secondary card-form">
                    <div class="card-body" >
                        <div class="form-group mb-3">
                            <input asp-for="Title" type="text" class="form-control" placeholder="Title...">
                        </div>
                        <div class="form-group">
                            <textarea asp-for="Content" class="form-control" rows="6" placeholder="Take a note..."></textarea>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="d-flex justify-content-center">
            <div class="col-lg-6" style="width:35rem;">
                <div class="card border-secondary card-form">
                    <div class="card-body">
                        <button type="submit" class="btn btn-success">Update</button>
                        <a id="delete" class="btn btn-danger">Delete</a>
                        <button type="button" class="btn btn-secondary float-end" onclick="window.history.go(-1); return false;">Back</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
<script>
    $(document).ready(function() {
        $("#delete").click(function() {
            event.preventDefault();
            window.location.href = '@Url.ActionLink("Delete", "Home", new RouteValueDictionary(new { id = Model.Id }))';
        });
    });

</script>